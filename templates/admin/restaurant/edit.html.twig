{% extends 'layout.html.twig' %}


{% block content %}
    <h1>Edition Restaurants</h1>
    {{ form_start(form) }} {# ouvre la balise form #}
   
    {{ form_row(form.nom) }}
    {{ form_row(form.note) }}
    {{ form_row(form.ville) }}
    {{ form_row(form.adresse) }}
    {{ form_row(form.cdp) }}
    {{ form_row(form.telephone) }}
    {{ form_row(form.specialite) }}
    {{ form_row(form.image) }}
    {{ form_row(form.description) }}
    {{ form_row(form.article) }}
    <div class="form-btn-group pull-right">
        <button type="submit" class="btn btn-lg btn-primary">
            Enregistrer
        </button>
        <a href="{{ path('app_admin_restaurant_index') }}" class="btn btn-lg btn-danger">Retour</a>
    </div>
    {{ form_end(form) }} {# ferme la balise form #}
{% endblock %}